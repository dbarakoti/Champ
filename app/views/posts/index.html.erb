

<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<br>

<table>

  <thead>
  
    <tr>
      <th>Title</th>
      <th>Factorial</th>
      <th>Body</th>
      <th>Published</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.factorial %></td>
        <td><%= post.body %></td>
        <td><%= post.published %></td>
        <td><button class="btn"><%= link_to 'Show', post %></button></td>
        <td><button class="btn"><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td><button class="btn"><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to 'New Post', new_post_path %>
